<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="GTM" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Google Tag Manager</label>
            <tab>kmmx</tab>
            <resource>Kmmx_Core::gtm</resource>
            <group id="gtm_configuration" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>GTM Configuration</label>
                <field id="gtm_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>GTM ID</label>
                    <comment>Place here your GTM ID</comment>
                </field>
            </group>
        </section>
    </system>
</config>
